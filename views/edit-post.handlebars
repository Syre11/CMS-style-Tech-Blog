<form class="container w-50 card edit-post-form">
  <h3 class="title d-flex justify-content-center">Edit Post</h3>
  <div class= "form-group">
    <div class="form-group row">      
      <label class="col-sm-2 col-form-label" for="post-title">Title</label>
      <input type="text" class="col-sm-9 form-control" value="{{post.title}}" id="post-title"/>
    </div>
    <div class="form-group row">      
      <label class="col-sm-2 col-form-label" for="post-content">Content</label>
      <textarea type="text" class="col-sm-9 form-control"  id="post-content" aria-label="With textarea">{{post.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update Post</button>
    <button type="button" class="btn btn-secondary delete-post-button">Delete Post</button>
  </div>  
</form>

<script src="./js/editPost.js"></script>
<script src="./js/deletePost.js"></script>