<form class="container w-50 card new-post-form">
  <h3 class="title d-flex justify-content-center">Create a new Post</h3>
  <div class= "form-group">
    <div class="form-group row">      
      <label class="col-sm-2 col-form-label" for="post-title">Title</label>
      <input type="text" class="col-sm-9 form-control" id="post-title"/>
    </div>
    <div class="form-group row">      
      <label class="col-sm-2 col-form-label" for="post-content">Content</label>
      <textarea type="text" class="col-sm-9 form-control"  id="post-content" aria-label="With textarea"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
  </div>  
</form>

<script src="/js/newPost.js"></script>