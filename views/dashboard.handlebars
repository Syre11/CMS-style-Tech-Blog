<h2>Your Posts</h2>

<button type="submit" class="btn new-post-button"><a class="link" href="/dashboard/create">Add New Post</a></button>
{{#if posts.length}}
<div>
  <h3 class="d-flex justify-content-center">Your Blog Posts</h3>
  {{#each posts as |post|}}
    {{> dashboard-details post}}
  {{/each}}
  {{else}}
  <h3>You have not made a blog post yet.</h3>
</div>
{{/if}}

<script src="/js/newPost.js"></script>
